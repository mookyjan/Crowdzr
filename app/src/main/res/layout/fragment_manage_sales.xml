<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/manageSalesContainer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.sales.ManageSalesFragment">


    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/tab_layout_manage_sales"
        app:tabGravity="fill"
        app:tabTextColor="@android:color/white"
        style="@style/CustomTabLayout"
        android:layout_gravity="left"
        android:background="@color/colorPrimary"
        app:tabMode="fixed"
        >

    </android.support.design.widget.TabLayout>


    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tab_layout_manage_sales"
        android:id="@+id/viewPagerManageSales"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

    </android.support.v4.view.ViewPager>

</android.support.constraint.ConstraintLayout>